<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <vendor_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>assets/css/bootstrap.min.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>assets/js/bootstrap.min.js</name>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/3columns.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="fr06_lists/list" name="vendor.index.listCustomer" template="fr06/vendor/lists.phtml" />
        </reference>
    </vendor_index_index>
    <vendor_index_insert>
        <reference name="root">
            <action method="setTemplate"><template>page/3columns.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="fr06_forms/form" name="vendor.index.form" template="fr06/vendor/form.phtml" />
        </reference>
    </vendor_index_insert>
    <vendor_index_message>
        <reference name="root">
            <action method="setTemplate"><template>page/3columns.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="fr06_messages/message" name="vendor.index.message" template="fr06/vendor/message.phtml" />
        </reference>
    </vendor_index_message>
</layout>
