<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Fr06_Vendor>
            <version>0.1.0</version>
        </Fr06_Vendor>
    </modules>
    <frontend>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>Fr06_Vendor</module>
                    <frontName>fr06-vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <fr06_forms>
                <class>Fr06_Vendor_Block</class>
            </fr06_forms>
            <fr06_lists>
                <class>Fr06_Vendor_Block</class>
            </fr06_lists>
            <fr06_messages>
                <class>Fr06_Vendor_Block</class>
            </fr06_messages>
        </blocks>
        <models>
            <vendor>
                <class>Fr06_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <core>
                <rewrite>
                    <email_template>Fr06_Vendor_Model_Email_Template</email_template>
                </rewrite>
            </core>
            <vendor_resource>
                <class>Fr06_Vendor_Model_Resource</class>
                <entities>
                    <order>
                        <table>fr06_vendor</table>
                    </order>
                </entities>
            </vendor_resource>
        </models>
        <resources>
            <vendor_setup>
                <setup>
                    <module>Fr06_Vendor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>

            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>

            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
    </global>
</config>
